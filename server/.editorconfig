root = true

[*.cs]

# Indentação
indent_style = space
indent_size = 4

# Quebra de linha — evitar quebra em declaração de classe (sem quebrar parâmetros etc)
csharp_preserve_single_line_blocks = true
csharp_preserve_single_line_statements = true
csharp_new_line_before_open_brace = none

# Usings — remover espaços extras entre eles
# Note: Visual Studio não tem configuração direta para juntar usando em uma linha só,
# mas essa configuração evita linhas em branco entre usings:
dotnet_separate_import_directive_groups = false
dotnet_sort_system_directives_first = true

# Remover usings não usados automaticamente ao salvar
dotnet_remove_unnecessary_imports_on_save = true

# Regras para manter parâmetros/membros em linha quando possível
csharp_wrap_parameters = false
csharp_wrap_arguments = false

# Formatação geral
csharp_indent_case_contents = true
csharp_indent_switch_labels = true

# Espaçamento para métodos
csharp_space_between_method_declaration_parameter_list_parentheses = false
csharp_space_between_method_call_parameter_list_parentheses = false

# Estilo de corpo de métodos
csharp_style_expression_bodied_methods = false:suggestion
csharp_style_expression_bodied_constructors = false:suggestion

# Qualificação (não usar this. para campos/propriedades)
csharp_style_qualification_for_field = false:suggestion
csharp_style_qualification_for_property = false:suggestion
csharp_style_qualification_for_method = false:suggestion
csharp_style_qualification_for_event = false:suggestion
